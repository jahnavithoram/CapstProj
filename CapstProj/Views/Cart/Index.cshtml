@model IEnumerable<CapstProj.Models.CartModel>

@{
    ViewData["Title"] = "Index";
    int total= 0;
}
<head>
   
    <style>
        .table {
            padding: 50rem;
            border: thin;
            border-color: grey;
        }
    </style>
</head>
<h1>Cart Details</h1>

<table class="table">

    @foreach (var item in Model)
    {
        @if (User.Identity.Name == item.UID || User.IsInRole("Admin"))
        {
            total = total + item.Cost;
            if (total != 0)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.ID"> <img src="@Url.Content(item.ProductImagePath)" alt="Sample Photo" id="Pic" width="150px" height="150px" /></a>
                    </td>
                    <td>
                        <table>
                            <tr>
                                <td>
                                    <b>@item.P_Name</b>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <b>qty:@item.qty</b>
                                </td>

                            </tr>
                            <tr>
                                <td>
                                    <b>Rs:@item.Cost/-</b>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.ID"><img src="https://image.flaticon.com/icons/png/512/3385/3385590.png" width="30px" height="30px" /></a>
                    </td>
                </tr>
                }

            }
        }
        @if (total == 0)
        {
            <h1 style="color:teal">EMPTY CART</h1>
        }
        else
        {
            <tr>
                <td><h3>Total Cost:</h3></td>
                <td><h3>Rs @total/-</h3></td>
                <td>
                    <div class="container">
                    
                        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Proceed to Pay</button>

                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <table class="table"><tr><td><h4 class="modal-title">Payment Details</h4></td><td> <button type="button" class="close" data-dismiss="modal">&times;</button></td></tr></table>
                                    </div> 
                                    <div class="modal-body">
                                        <table align="center" class="table">
                                            <tr>
                                                <td>Email</td>
                                                <td><input type="text" value="@User.Identity.Name" readonly placeholder="Email" /></td>
                                            </tr>
                                            <tr>
                                                <td>PhoneNo.</td>
                                                <td><input type="number" maxlength="10" placeholder="Phone.No" required /></td>
                                            </tr>
                                            <tr>

                                                <td>  Address: </td>
                                                <td><input type="text" value="" required placeholder="Address" />
                                                <td>


                                            </tr>
                                            <tr>
                                                <td>
                                                    CardNo:
                                                </td>
                                                <td>
                                                    <input type="text" value="" required placeholder="CardNo." maxlength="16" />
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    Cvv:
                                                </td>
                                                <td>
                                                    <input type="password" value="" required placeholder="cvv" maxlength="3"/>
                                                </td>
                                            </tr>
                                        </table>
                                    </div>
                                    <div class="modal-footer">
                                        <a asp-action="Create" asp-controller="Confirm" asp-route-id=""><input type="submit" value="Confirm" onclick="alert('Thank you for the Purchase!'); window.alert('Please wait...')"/></a>  
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>

                </td>
                <td><a asp-action="pay" asp-controller="Cart" asp-route-id="">Proceed to Pay</a></td>
            </tr>
        }
    </table>
