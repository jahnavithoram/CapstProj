@model IEnumerable<CapstProj.Models.ProductModel>
@{
    int c = 0;
}
<head>

    <script data-require="jquery@3.1.1" data-semver="3.1.1" src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

<link rel="stylesheet" href="~/css/StyleSheet.css" />
</head>
<div>
    <table align="right" style="background-color:lightgrey; border-color:dimgrey">
        <tr><th>Categories</th></tr>
        <tr><td>  <a class="nav-link text-dark" asp-action="Index1" asp-route-id=@null>All</a> </td></tr>
        <tr><td>  <a class="nav-link text-dark" asp-action="Index1" asp-route-id="Cold_fever">Cold fever</a> </td></tr>
        <tr><td>  <a class="nav-link text-dark" asp-action="Index1" asp-route-id="Covid_vaccine">Covid Vaccine</a> </td></tr>
    </table>
    <table align="center">
        <tr>
            @foreach (var item in Model)
            {
                @if (item.CategoryId == ViewBag.cat || ViewBag.cat == null)
                {
                    @if (c != 0 && c % 2 == 0)
                    {
                    @:</tr>
                    @:<tr>

                    }
                    <td align="center">
                        <div class="card">
                            <img src="@Url.Content(item.ProductImagePath)" style="width:100%;height:100px">
                            <div class="container">
                                <h4><b>@Html.DisplayFor(modelItem => item.P_Name)</b></h4>
                                <h4>@Html.DisplayFor(modelItem => item.Cost) /-</h4>

                                @using (Html.BeginForm("AddtoCart", "Cart", new { UID = User.Identity.Name, ID = @item.ID + User.Identity.Name, P_Name = @item.P_Name, Cost = @item.Cost, Details = @item.Details, ProductImagePath = @item.ProductImagePath, CategoryId = @item.CategoryId, qty = 1 }, FormMethod.Post))
                                {


                                    <input type="submit" value="BUY" class="btn btn-primary" />


                                }

                            </div>
                        </div>
                    </td>
                    c++;
                }
            }
            @{ViewBag.cat = null;}
    </table>
</div>