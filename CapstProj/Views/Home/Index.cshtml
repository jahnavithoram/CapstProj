@{
    ViewData["Title"] = "Home Page";
}
<style>
    .carousel .carousel-caption {
        color: #999;
</style>
<script>
    $('.carousel').carousel()
</script>
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
</div>


<div class="container">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="https://i.ytimg.com/vi/nOa8wIhQdzo/maxresdefault.jpg" alt="First slide">

                <div class="carousel-caption d-none d-md-block" style="color:white">
                    <h3>Maintain Social Distance</h3>
                    <h5>Inside and Outside the house</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://i.ytimg.com/vi/vohiTyczR8w/maxresdefault.jpg" alt="Second slide">
                <div class="carousel-caption d-none d-md-block" style="color:white">
                    <h3 >Wear Mask</h3>
                    <h5>Double Mask You Self</h5>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="https://i.ytimg.com/vi/-cJ0q85K3Qc/maxresdefault.jpg" alt="Third slide">

                <div class="carousel-caption d-none d-md-block" style="color:white">
                    <h3>Santize your hands REGULARLY</h3>
                    <h5>Use soap or alcohol based santizer</h5>
                </div>
            </div>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>>